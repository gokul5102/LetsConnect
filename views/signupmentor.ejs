        <!--Converting range input to dynamically convert range values-->
        <script>

            function myfunction(x) {
                var slider = document.getElementsByClassName("input-range")[x];
                
                if(slider.value <= 3){
                    document.getElementsByClassName("input-range")[x].title = "beginner";
                }
                else if ((4 <= slider.value) && (slider.value <= 6)){
                    document.getElementsByClassName("input-range")[x].title = "intermediate";
                }
                else {
                    document.getElementsByClassName("input-range")[x].title = "advanced";
                }
            }
        </script>

