                <div class="col-8 col-lg-6 mx-auto mt-5 mt-lg-0">
                    
                        <div class="container mx-auto px-auto" style="max-width: 600px">
                            <div class="form-group d-none">
                                <input
                                    required
                                    type="text"
                                    class="form-control"
                                    placeholder="Enter Name"
                                    name="type"
                                    value="mentor"
                                    required
                                />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1"> <small>Your Name *</small> </label>
                                <input
                                    required
                                    type="text"
                                    class="form-control"
                                    placeholder="Enter Name"
                                    name="name"
                                    required
                                />
                            </div>
                            <div class="form-group">
                              <label for="exampleInputEmail1">
                                  <small>Your Phone Number *</small></label
                              >
                              <input
                                  required
                                  type="text"
                                  class="form-control"
                                  placeholder="+91 xxxxxxxx"
                                  name="phone"
                                  required
                              />
                          </div>
                          <div class="form-group">
                            <label for="exampleInputEmail1"><small> Your Email *</small></label>
                            <input
                                required
                                type="text"
                                class="form-control"
                                placeholder="Enter Email"
                                name="username"
                                required
                            />
                        </div>
                          <div class="form-group">
                            <label for="exampleInputPassword1">
                                <small> Password *</small></label
                            >
                            <input
                                required
                                type="password"
                                class="form-control"
                                placeholder="Password"
                                name="password"
                                required
                            />
                        </div>
                            <div class="form-group">
                                <label for="gender"><small> What is your gender? </small></label>
                                <select id="dropdown" name="gender" class="form-control" required>
                                    <option disabled selected value></option>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                    <option value="other">Other</option>
                                    <option value="prefernottosay">Prefer not to say</option>
                                </select>
                            </div>
                          </div>
              
                        </div>
                        </div>
                        <br>
                        <div class="row">
                          <div class="col-md-6">
                            <div class="form-group">
                              <label for="exampleInputEmail1"><small> City *</small></label>
