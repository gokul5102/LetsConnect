    <body>
        <div class="container pl-5" style="font-size: 22px">
            <script src="https://cdn.lordicon.com//libs/frhvbuzj/lord-icon-2.0.2.js"></script>
            <lord-icon
                src="https://cdn.lordicon.com//dxjqoygy.json"
                trigger="loop"
                colors="primary:#121331,secondary:#e88c30"
                style="width: 100px; height: 100px"
            >
            </lord-icon>
            <a style="text-decoration: none; color: black" href="/"
                >Welcome to <b>Lets<span style="color: rgb(255, 187, 0)">Connect</span> </b></a
            >
        </div>
        <div class="container mx-auto px-auto" style="text-align: center">
            <div style="font-size: x-large; color: orangered">Mentor Sign Up</div>
            <small>Be the change that you want to see in the world !</small>
        </div>
        <div class="container flash-container my-3">
            <% if(error && error.length > 0 ) { %>
            <div class="row d-flex justify-content-between m-2">
                <div
                    class="alert alert-danger alert-dismissible fade show text-center"
                    role="alert"
                    style="width: 100%"
                >
                    <%= error %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <% } %> <% if(success && success.length > 0 ) { %>
            <div class="row d-flex justify-content-between m-2">
                <div
                    class="alert alert-success alert-dismissible fade show text-center"
                    role="alert"
                    style="width: 100%"
                >
                    <%= success %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <% } %>
        </div>

        <div class="container">
          <form action="/signup" method="POST">
